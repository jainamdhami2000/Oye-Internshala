<%-include('partials/header')%>
<body class="signup-page sidebar-collapse" style="background-color:#848ccf;">
  <div class="page-header header-filter" style=" background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
          <div class="card card-signup">
            <div class="row text-center">
              <div class="col-sm-4 ">
                <div style='margin-top:8%'>
                  <img src="main/std-profile/Sign_up_icon.svg" width="30%" height="25%">
                  <h4> SIGN UP </h4>
                  <h5 style="font-size: 15px;color:darkgray">Get started by creating your account</h5>
                </div>

              </div>
              <div class="col-sm-4 ">
                <!-- <div class="signup-text-center"> -->
                <!-- style="margin-left:25%" -->
                <img src="main/std-profile/Apply.svg" width="35%" height="45%">
                <div class="icon-text" style="padding-top: 12px">
                  <h4> APPLY </h4>
                  <h5 style="font-size: 15px;color:darkgray">Apply for internships, Jobs and Volunteering Services as per interest and location</h5>
                </div>
                <!-- </div> -->
              </div>
              <div class="col-sm-4 ">
                <!-- <div class="signup-text-center"> -->
                <!-- style="margin-left:50%" -->
                <div style='margin-top:8%'>
                  <img src="/main/emp-profile/Hire-icon.svg" width="30%" height="25%" style="padding-bottom: 5px">
                  <div class="icon-text">
                    <h4> HIRE SOMEONE </h4>
                    <h5 style="font-size: 15px;color:darkgray "> Recruit new people! </h5>
                  </div>
                </div>
                <!-- </div> -->
              </div>

            </div>
            <h2 class="card-title text-center">Register</h2>
            <div class="card-body">
              <div class="row">
                <div class="col-md-5 ml-auto">
                  <img src="/main/emp-profile/emp-sign.svg" class="img-responsive" style="float:left; padding-bottom:100px; margin-top: 10%;" width="90%" height="90%">
                </div>

                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
                <div class="col-md-5 mr-auto">
                  <form class="form" method="POST" action="/signup-emp">
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input name="fname" required type="text" class="form-control" placeholder="First Name...">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input name='lname' required type="text" class="form-control" placeholder="Last Name...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input name='username' required type="text" class="form-control" placeholder="Username...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">phone</i>
                          </span>
                        </div>
                        <input name='phoneno' required type="number" class="form-control" placeholder="Phone No...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input name='email' required type="text" class="form-control" placeholder="Email...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input name='company_name' required type="text" class="form-control" placeholder="Company Name...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <span class="material-icons">
                              location_city
                            </span>
                          </span>
                        </div>
                        <input name='city' required type="text" class="form-control" placeholder="City...">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">lock_outline</i>
                          </span>
                        </div>
                        <input name='password' required type="password" placeholder="Password..." class="form-control" />
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">lock_outline</i>
                          </span>
                        </div>
                        <input type="password" required placeholder="Password Confirmation..." class="form-control" />
                      </div>
                    </div>
                    <!-- <div class="form-check">
                      <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="" checked>
                        <span class="form-check-sign">
                          <span class="check"></span>
                        </span>
                        I agree to the <a href="#something">terms and conditions</a>.
                      </label>
                    </div> -->
                    <div class="text-center">
                      <button type='submit' class="btn btn-info btn-round">Get Started</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</body>
<%-include('partials/footer')%>
