<%-include('partials/header')%>

<body class="signup-page sidebar-collapse" style="background-color:#848ccf;">
  <div class="page-header header-filter" style=" background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
          <div class="card card-signup">
            <h2 class="card-title text-center">EDIT EMPLOYER</h2>
            <div class="card-body">
              <div class="row">
                <div class="col-md-5 ml-auto">
                  <img src="/main/emp-profile/emp-sign.svg" alt="Edit Employer" class="img-responsive" style="float:left; padding-bottom:100px; margin-top: 10%;" width="90%" height="90%">
                </div>
                <div class="col-md-5 mr-auto">
                  <form class="form" method="POST" action="/profile/updateemployer">
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input value='<%=user.FirstName%>' name="fname" required type="text" class="form-control" placeholder="First Name...">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input value='<%=user.LastName%>' name='lname' required type="text" class="form-control" placeholder="Last Name...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input value='<%=user.username%>' name='username' required type="text" class="form-control" placeholder="Username...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">phone</i>
                          </span>
                        </div>
                        <input value='<%=user.phoneNumber%>' name='phoneno' required type="number" class="form-control" placeholder="Phone No...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input value='<%=user.Email%>' name='email' required type="email" class="form-control" placeholder="Email..." readonly>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input value='<%=user.CompanyName%>' name='company_name' required type="text" class="form-control" placeholder="Company Name..." readonly>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <textarea required name='company_description' type="text" class="form-control" placeholder="About Your Company..." rows="4" id="exampleInputTextarea"><%=user.CompanyDescription%></textarea>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <span class="material-icons">
                              location_city
                            </span>
                          </span>
                        </div>
                        <select name='city' id="loc" class="form-control selectpicker" data-style="select-with-transition" data-size="7" required value='<%=user.MainOfficeLocation%>' selected readonly>
                        </select>
                      </div>
                    </div>
                    <div class="text-center">
                      <button type='submit' class="btn btn-info btn-round">Edit</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      var city = '<%=user.MainOfficeLocation%>';
  </script>
  <script src="/js/editinternship.js" charset="utf-8"></script>
</body>
<%-include('partials/footer')%>
