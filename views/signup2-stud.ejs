<%-include('partials/header')%>

<body class="signup-page sidebar-collapse" style="background-color:#848ccf;">
  <div class="page-header header-filter" style=" background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
          <div class="card card-signup">
            <h2 class="card-title text-center">Register</h2>
            <div class="card-body">
              <div class="row">
                <div class="col-md-5 ml-auto">
                  <img alt="Student Signup" src="main/std-profile/std-sign.svg" class="img-responsive" style="float:left; padding-bottom:100px; margin-top: 10%;" width="90%" height="90%">
                </div>
                <div class="col-md-5 mr-auto">
                  <h4 class="card-title"> Please fill in the following fields </h4>
                  <form class="form" enctype="multipart/form-data" method="POST" action="/signup2-stud">
                    <%if (user.Email == null){%>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input name='email' type="text" class="form-control" placeholder="Email...">
                      </div>
                    </div>
                    <%}%>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">description</i>
                          </span>
                        </div>
                        <textarea required name='skills' type="text" class="form-control" placeholder="Basic Skills..." rows="4" id="exampleInputTextarea"></textarea>
                      </div>
                    </div>

                    <div class="form-group form-file-upload form-file-multiple">
                      <input name="resume" type="file" multiple="" class="inputFileHidden">
                      <div class="input-group">
                        <span class="input-group-text">
                          <i class="material-icons">attach_file</i>
                        </span>
                        <input type="text" class="form-control inputFileVisible" placeholder="Upload Resume(PDF Only)...">
                        <span class="input-group-btn">
                          <button type="button" class="btn btn-link btn-fab btn-primary"></button>
                        </span>
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">cake</i>
                          </span>
                        </div>
                      <input required placeholder="Date of Birth..." name="birthdate" type="text" class="form-control datepicker">
                    </div>
                  </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <input required name='college_name' type="text" class="form-control" placeholder="College Name...">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <span class="material-icons">
                              location_city
                            </span>
                          </span>
                        </div>
                        <select name='city' id="loc" class="form-control selectpicker" data-style="select-with-transition" title="Choose City" data-size="7">
                          <option disabled> Choose City</option>
                        </select>
                      </div>
                    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-info btn-round">Get Started</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/cities.js" charset="utf-8"></script>
</body>
  <%-include('partials/footer')%>
