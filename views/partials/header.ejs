<!doctype html>
<html lang="en">

<head>
    <title>OYE-Internshala</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- Material Kit CSS -->
    <link href="/assets/css/material-kit.css" rel="stylesheet" />
    <!-- <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script> -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-color-on-scroll navbar-transparent fixed-top navbar-expand-lg" color-on-scroll="100">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="/">
                    OYE </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <%if  (typeof user !='undefined') {%>
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle btn btn-outline-info" data-toggle="dropdown" aria-expanded="true">Welcome <%=user.FirstName%><div class="ripple-container"></div></a>
                        <div class="dropdown-menu">
                            <strong>
                                <div class="dropdown-header">
                                    <strong><%=user.FirstName%> <%=user.LastName%></strong>
                                </div>
                            </strong>
                            <div class="dropdown-header">
                                <%=user.Email%>
                            </div>
                            <div class="dropdown-divider"></div>
                            <%if (user.isEmployer){%>
                            <a href='/profile/employer' class="dropdown-item">Employer Profile</a>
                            <a href='/internship/postintern' class="dropdown-item">Post an Internship/Job</a>
                            <a href='/internship/postedjobs' class="dropdown-item">Posted Internships/Jobs</a>
                            <%} else if (user.isStudent) {%>
                            <a href='/profile/student' class="dropdown-item">Student Profile</a>
                            <a href='/internship/searchintern' class="dropdown-item">Search Internships/Jobs</a>
                            <a href='/courses/searchcourse' class="dropdown-item">Search Course</a>
                            <a href='/internship/appliedinternship' class="dropdown-item">My Applications</a>
                            <%} else {%>
                                <a href='/profile/trainer' class="dropdown-item">Trainer Profile</a>
                                <a href='/courses/postcourse' class="dropdown-item">Post course</a>
                                <a href='/courses/postedcourses' class="dropdown-item">Posted courses</a>
                            <%}%>
              <a href="/logout" class="dropdown-item">Logout</a>
            </div>
          </li>
          <%} else {%>
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle btn btn-outline-info" data-toggle="dropdown" aria-expanded="true">Login<div class="ripple-container"></div></a>
                        <div class="dropdown-menu">
                            <a href="/login-stud" class="dropdown-item">Login as Student</a>
                            <a href="/login-emp" class="dropdown-item">Login as Employer</a>
                            <a href="/login-trainer" class="dropdown-item">Login as Trainer</a>
                        </div>
                    </li>
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle btn btn-info" data-toggle="dropdown" aria-expanded="true">Register<div class="ripple-container"></div></a>
                        <div class="dropdown-menu">
                            <a href="/signup-stud" class="dropdown-item">Register as Student</a>
                            <a href="/signup-emp" class="dropdown-item">Register as Employer</a>
                            <a href="/signup-trainer" class="dropdown-item">Register as Trainer</a>
                        </div>
                    </li>
                    <%}%>
        </ul>
      </div>
    </div>
  </nav>
