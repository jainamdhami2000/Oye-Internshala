<%-include('../partials/header')%>
<link rel="stylesheet" href="/css/internship-details.css">

<body class="signup-page sidebar-collapse" style="background-color:#848ccf;">
  <div class="page-header header-filter" style=" background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-md-12 ml-auto mr-auto" style="margin-top:50px;">
          <div class="MainCard">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">COURSES</h5>
                <div class="container1">
                  <input name='job_id' style='display:none' value='<%=job._id%>'>
                  <h4>Category: <%=job.job_category%></h4>
                  <h4>Title: <%=job.job_title%></h4>
                  <h5>University Name: <%=job.company_name%></h5>
                  <div class="float-container1">

                    <div class="float-child3">
                      <h4>Start Date</h4>
                      <div><%=job.start_date.toDateString()%></div>
                    </div>
                    <div class="float-child3">
                      <h4>Duration</h4>
                      <div><%=job.job_duration%></div>
                    </div>
                    <div class="float-child3">
                      <h4>Apply By</h4>
                      <div><%=job.apply_last.toDateString()%></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div style="padding: 20px;" class="">
              <h3>About OYE India</h3>
              <p>
                <a href="/">Homepage</a><br>
                <%=user.CompanyDescription%>
              </p>
              <h3>About the Course</h3>
              <p>
                <%=job.job_content%>
              </p>
              <center>
                <form action="/admin/courseverification" method="post">
                  <input style='display:none' type="text" name="job_id" value="<%=job._id%>">
                  <input type="submit" name="accept" id="accept" value="Accept" class="btn btn-success"></input>
                  <input type="submit" name="reject" id="reject" value="Reject" class="btn btn-danger"></input>
                </form>
              </center>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%-include('../partials/footer')%>
