<%-include('partials/header')%>
<style media="screen">
  /*.bmd-form-group {*/
  /*  padding-top: 20px*/
  /*}*/

  .form-group {
    margin-bottom: 10px
  }

  h4 {
    margin: auto 0;
  }

  .viewSite {
    display: none;
  }

  .viewPaid {
    display: none;
  }
  .noDisplay{
      display: none;
  }
  .togglebutton label{
      cursor: default;
  }
  .toggle{
      cursor: pointer;
  }
